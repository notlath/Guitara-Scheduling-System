# ===================================
# GUITARA SCHEDULING SYSTEM - ENVIRONMENT VARIABLES
# ===================================
# Copy this file to .env and fill in your actual values

# Django Settings
DEBUG=True
SECRET_KEY=your-super-secret-key-here-change-in-production
DJANGO_SETTINGS_MODULE=guitara.settings

# Database Configuration (Supabase)
SUPABASE_DB_NAME=your_database_name
SUPABASE_DB_USER=your_username
SUPABASE_DB_PASSWORD=your_password
SUPABASE_DB_HOST=your_host.supabase.co

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0

# Email Configuration (Gmail SMTP)
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=Your Name <your_email@gmail.com>

# Optional: For local PostgreSQL instead of Supabase
# POSTGRES_DB=guitara_db
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
